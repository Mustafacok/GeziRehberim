@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Gezi Rehberim | Giriş Sayfası</title>

    <link rel="stylesheet" href="~/skydash_admin/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash_admin/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash_admin/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/skydash_admin/css/vertical-layout-light/style.css">

    <link rel="shortcut icon" href="~/skydash_admin/images/favicon2.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash_admin/images/logo.svg" alt="logo">
                            </div>
                            <h3>Gezi Rehberim Giriş Sayfası</h3>
                            <h4 class="font-weight-light">Giriş Yap</h4>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" asp-for="Username" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifreniz">
                                </div>

                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            Beni Hatırla
                                        </label>
                                    </div>
                                    <a href="#" class="auth-link text-black">Şifremi Unuttum</a>
                                </div> 

                                <div class="mt-3">
                                    <input type="submit" value="Giriş Yap" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >
                                </div>

                                
                                <div class="text-center mt-4 font-weight-light">
                                    Bir Hesabınız Yok Mu? <a href="/Register/Index/" class="text-primary">Oluştur</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/skydash_admin/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/skydash_admin/js/off-canvas.js"></script>
    <script src="~/skydash_admin/js/hoverable-collapse.js"></script>
    <script src="~/skydash_admin/js/template.js"></script>
    <script src="~/skydash_admin/js/settings.js"></script>
    <script src="~/skydash_admin/js/todolist.js"></script>

</body>
</html>
