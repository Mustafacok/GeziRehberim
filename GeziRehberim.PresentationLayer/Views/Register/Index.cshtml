@using GeziRehberim.DtoLayer.Dtos.AppUserDtos;
@model AppUserRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Gezi Rehberim | Yeni Kullanıcı Kaydı</title>

    <link rel="stylesheet" href="~/skydash_admin/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash_admin/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash_admin/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/skydash_admin/css/vertical-layout-light/style.css">

    <link rel="shortcut icon" href="~/skydash_admin/images/favicon2.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash_admin/images/logo.svg" alt="logo">
                            </div>
                            <h4>Gezi Rehberim Kayıt Formu</h4>
                            <h5 class="font-weight-light">Yeni Müşteri</h5>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" asp-for="Name" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Adınız" required="">
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="Surname" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Soyadınız" required="">
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="Username" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Kullanıcı Adınız" required="">
                                </div>
                                <div class="form-group">
                                    <input type="email" asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Mail Adresiniz" required="">
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifreniz" required="">
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifrenizi Tekrar Giriniz" required="">
                                </div>
                                <div class="text-black bg-info" asp-validation-summary="ModelOnly"></div> 
                                
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            Kullanım Şartlarını Okudum
                                        </label>
                                        <a href="/Home/Index">Ana Sayfaya Dön</a>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <input class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit" value="Kayıt Ol">
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Bir hesabınız var mı? <a href="/Login/Index" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/skydash_admin/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/skydash_admin/js/off-canvas.js"></script>
    <script src="~/skydash_admin/js/hoverable-collapse.js"></script>
    <script src="~/skydash_admin/js/template.js"></script>
    <script src="~/skydash_admin/js/settings.js"></script>
    <script src="~/skydash_admin/js/todolist.js"></script>

</body>
</html>
